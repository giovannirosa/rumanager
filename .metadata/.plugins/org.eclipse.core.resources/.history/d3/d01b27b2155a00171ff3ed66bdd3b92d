package controller.database;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.nio.charset.Charset;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.Paths;
import java.nio.file.StandardOpenOption;
import java.util.ArrayList;
import java.util.List;

import view.utils.Factory;

public abstract class Database {
	
	protected static String table;
	List<String> records = new ArrayList<>();
	static File file = new File (Factory.RU_PATH+"\\"+table+".txt");
	
	public static void checkDatabase() {
		try {
			if (!file.exists()) {
				file.createNewFile();
				Factory.log(table+" table created!");
			}
		} catch (IOException ex) {
		    ex.printStackTrace();
		}
	}
	
	protected boolean save() {
		Path path = Paths.get("");
		try {
			Files.write(Paths.get(file.getAbsolutePath()), records, Charset.forName("UTF-8"), StandardOpenOption.APPEND);
		} catch (IOException e) {
			e.printStackTrace();
		}
		
		return true;
	}
}

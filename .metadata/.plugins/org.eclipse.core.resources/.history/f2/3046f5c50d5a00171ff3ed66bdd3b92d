package controller;

import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import view.Inicial;
import view.utils.Factory;

public class Actions {
	
	public enum Action {
		RECEITA, INGREDIENTE, REFEIÇÃO, EXIT;
	}
	
	public static EventHandler<ActionEvent> getAction(Action act) {
		switch (act) {
		case RECEITA:
			return e -> {
				
			};
		case INGREDIENTE:
			return e -> {
				Inicial.tabPane.getTabs().add(Inicial.ingTab);
			};
		case REFEIÇÃO:
			return e -> {
				
			};
		case EXIT:
			return e -> {
				if (Factory.showConfirmation("Tem certeza que deseja sair?")) {		
					System.exit(0);
				}
			};
		default:
			return null;
		}
	}
}

package controller;

import controller.database.ItemDB;
import javafx.collections.ObservableList;
import model.Item;
import model.Model;
import model.table.TIngModel;
import model.table.TableModel;

public class ItemControl extends Control {

	public ItemControl() {
		super(new ItemDB());
	}

	@Override
	public void loadTable(ObservableList<TableModel> data) {
		data.clear();
		if (map.isEmpty()) {
			data.add(new TIngModel());
			return;
		}
		for (Model m : map.values()) {
			Item i = (Item) m;
			data.add(new TIngModel(i.getId(), i.getNome(), i.getQtde(), i.getUnidade()));
		}
	}
}
